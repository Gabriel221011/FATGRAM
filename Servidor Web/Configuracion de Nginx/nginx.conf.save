# /etc/nginx/nginx.conf
user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
}

http {
    # tu configuración HTTP normal
    include /etc/nginx/mime.types;
    default_type application/octet-stream;
    sendfile on;
    keepalive_timeout 65;
    include /etc/nginx/sites-enabled/*;
}

# -------------------
# Bloque TCP para MariaDB
# -------------------
stream {
    upstream mariadb_upstream {
        # Puede ser el RDS directamente o tu servidor web en privada
        server <RDS_ENDPOINT>:3306;
    }

    server {
        listen 3306;  # puerto público de la instancia NAT
        proxy_pass mariadb_upstream;
        proxy_timeout 10s;
        proxy_connect_timeout 5s;
    }
}
